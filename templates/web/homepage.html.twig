{% extends 'web/base.html.twig' %}

{% block title %}{{ 'Happy Paws Coaching' | trans }} Â· {{ parent() }}{% endblock %}

{% block body %}
    <section class="text-center py-20 bg-dusk rounded-3xl">
        <h1 class="text-4xl font-bold text-gray-800">{{ 'Happy Paws Coaching' | trans }}</h1>
        <p class="mt-4 text-xl text-gray-600">{{ 'Positive training for happy, well-behaved dogs' | trans }}</p>
        <a href="#contact" class="mt-6 inline-flex items-center gap-x-2 bg-brand hover:bg-yellow-600 text-white font-semibold px-6 py-3 rounded transition">
            {{ ux_icon('streamline-plump:pet-paw-remix', {'class': 'w-6 h-6'}) }} {{ 'Book a Session' | trans }}
        </a>
    </section>
    <section id="about" class="text-center py-16 bg-white">
        <h2 class="text-2xl font-bold mb-4">{{ 'Meet Your Dog Coach' | trans }}</h2>
        <img src="{{ asset('images/main_image.png') | imagine_filter('1200xY') }}" alt="{{ 'Meet Your Dog Coach' | trans }}" class="mx-auto max-w-full h-auto mb-6 rounded-3xl" />
        <p class="text-gray-700 leading-relaxed">{{ 'Meet Your Dog Coach Description' | trans }}</p>
    </section>
    <section id="services" class="text-center py-16 bg-soft rounded-3xl">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-bold mb-6">{{ 'Our Services' | trans }}</h2>
            <div class="grid md:grid-cols-3 gap-6">
                {% for service in services %}
                    <div class="bg-white shadow p-6 rounded-lg">
                        <h3 class="text-xl font-semibold">{{ service.name }}</h3>
                        <p class="text-gray-600">{{ service.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <section id="contact" class="py-16 bg-white">
        <div class="container mx-auto px-4 max-w-xl">
            <h2 class="text-2xl font-bold mb-6">{{ 'Contact Me' | trans }}</h2>
            <p class="mb-4 text-gray-700">{{ 'Contact Me Description' | trans }}</p>
            <form action="#" method="POST" class="space-y-4">
                <input type="text" name="name" placeholder="{{ 'Your Name' | trans }}" class="w-full border p-3 rounded">
                <input type="email" name="email" placeholder="{{ 'Your Email' | trans  }}" class="w-full border p-3 rounded">
                <textarea name="message" rows="5" placeholder="{{ 'Your Message' | trans }}" class="w-full border p-3 rounded"></textarea>
                <button type="submit" class="bg-brand hover:bg-yellow-600 text-white px-6 py-3 rounded transition cursor-pointer">{{ 'Send Message' | trans }}</button>
            </form>
            {{ form(form) }}
        </div>
    </section>
{% endblock %}
