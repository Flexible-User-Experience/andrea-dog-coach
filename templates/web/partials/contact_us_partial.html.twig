<form action="#" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="{{ 'Your Name' | trans }}" class="w-full border p-3 rounded">
    <input type="email" name="email" placeholder="{{ 'Your Email' | trans  }}" class="w-full border p-3 rounded">
    <textarea name="message" rows="5" placeholder="{{ 'Your Message' | trans }}" class="w-full border p-3 rounded"></textarea>
    <button type="submit" class="bg-brand hover:bg-yellow-600 text-white px-6 py-3 rounded transition cursor-pointer">{{ 'Send Message' | trans }}</button>
</form>
{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_rest(form) }}
{{ form_end(form) }}
