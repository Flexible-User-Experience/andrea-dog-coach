{% extends 'web/base.html.twig' %}

{% block title %}{{ current_service.name }} Â· {{ parent() }}{% endblock %}

{% block main_body_class %}flex-grow max-w-5xl mx-auto my-8 bg-soft rounded-3xl shadow-md{% endblock %}

{% block body %}
    <section id="services" class="py-4 bg-soft rounded-3xl">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-bold mb-4">{{ current_service.name }}</h2>
            {% if current_service.imageName is not null %}
                <img src="{{ vich_uploader_asset(current_service, 'imageFile') }}" alt="{{ current_service.name }}" class="w-full rounded mb-4">
            {% endif %}
            <p class="text-gray-600">{{ current_service.description }}</p>
        </div>
    </section>
{% endblock %}
